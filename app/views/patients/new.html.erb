<h1>Add new Patient</h1>

<%= form_with model: @patient do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :disease %><br>
    <%= form.text_area :disease %>
  </div> 
  <div>
    <%= form.label :age %><br>
    <%= form.text_field :age  %>
  </div>

  <div>
    <%= form.label :gender %><br>
    <%= form.text_field :gender%>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
